@model IEnumerable<PayCalculatorLibrary.Models.PermanentEmployee>

<body class="bg-dark text-light">
    <div class="text-center">
        <h1 class="display-5">Create a new Permanent Employee</h1>
        <p>By filling out this form, you can create a new permanent employee entry.</p>
    </div>
    <form style="width: 65%; margin: 0 auto">
        <div class="mb-3">
            <label for="name" class="form-label" style="margin: 0.5em 1em">Name</label>
            <input type="text" class="form-control bg-black" id="nameInput" placeholder="Employee name">
        </div>
        <div class="mb-3">
            <label for="salary" class="form-label" style="margin: 0.5em 1em">Salary</label>
            <input type="text" class="form-control bg-black" id="salaryInput" placeholder="Employee salary">
        </div>
        <div class="mb-3">
            <label for="bonus" class="form-label" style="margin: 0.5em 1em">Bonus</label>
            <input type="text" class="form-control bg-black" id="bonusInput" placeholder="Employee bonus">
        </div>
        <div class="mb-3">
            <label for="hoursWorked" class="form-label" style="margin: 0.5em 1em">Hours Worked</label>
            <input type="text" class="form-control bg-black" id="hoursWorkedInput" placeholder="Number of hours worked">
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary display-7">Submit</button>
        </div>
    </form>
</body>