@model PayCalculatorLibrary.Models.PermanentEmployee;

<body class="bg-dark text-light">
    <div class="text-center">
        <h1 class="display-5">Create a new Permanent Employee</h1>
        <p>By filling out this form, you can create a new permanent employee entry.</p>
    </div>
    <form asp-controller="PermanentEmployee" asp-action="Create" method="post" class="position-absolute top-50 start-50 translate-middle" style="width: 65%">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label" style="margin: 0.5em 0.8em">Name</label>
            <input asp-for="@Model.Name" type="text" class="form-control bg-black text-light" id="nameInput" placeholder="Employee name" style="border: 1px solid var(--bs-light-border-subtle); border-radius: 0.8em">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Salary" class="form-label" style="margin: 0.5em 0.8em">Salary</label>
            <input asp-for="@Model.Salary" type="number" class="form-control bg-black text-light" id="salaryInput" placeholder="Employee salary" style="border: 1px solid var(--bs-light-border-subtle); border-radius: 0.8em">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Bonus" class="form-label" style="margin: 0.5em 0.8em">Bonus</label>
            <input asp-for="@Model.Bonus" type="number" class="form-control bg-black text-light" id="bonusInput" placeholder="Employee bonus" style="border: 1px solid var(--bs-light-border-subtle); border-radius: 0.8em">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.HoursWorked" class="form-label" style="margin: 0.5em 0.8em">Hours Worked</label>
            <input asp-for="@Model.HoursWorked" type="number" class="form-control bg-black text-light" id="hoursWorkedInput" placeholder="Number of hours worked" style="border: 1px solid var(--bs-light-border-subtle); border-radius: 0.8em">
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary display-7">Submit</button>
        </div>
    </form>
</body>