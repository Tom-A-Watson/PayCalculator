@{
    ViewData["Title"] = "PermanentEmployee Page";
}

@model IEnumerable<PayCalculatorLibrary.Models.PermanentEmployee>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    </head>
    <body class="bg-dark text-light">
        <div class="text-center">
            <h1 class="display-4">Permanent Employees</h1>
            <p>This page will contain the CRUD operations that are performed on permanent employees!</p>
            
            <table class="table table-striped bg-light table-hover table-responsive">
                <thead class="bg-black text-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Bonus</th>
                        <th scope="col">Total Annual Pay</th>
                        <th scope="col">Hourly Rate</th>
                        <th scope="col">Hours Worked</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.Name</td>
                            <td>£@employee.Salary</td>
                            <td>£@employee.Bonus</td>
                            <td>£@employee.TotalAnnualPay</td>
                            <td>£@employee.HourlyRate</td>
                            <td>@employee.HoursWorked</td>
                        </tr>
                    }
                </tbody>
            </table>

            <a class="btn btn-outline-primary" asp-controller="PermanentEmployee" asp-action="Create" asp-area="">Create an entry</a>

            <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    </body>
</html>