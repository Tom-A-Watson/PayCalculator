@model PayCalculatorLibrary.Models.TemporaryEmployee;

<body class="bg-dark text-light">
    <div class="text-center">
        <h1 class="display-5">Update a Temporary Employee</h1>
        <p>By filling out this form, you can update a temporary employee entry.</p>
    </div>
    <form asp-controller="TemporaryEmployee" asp-action="Update" method="post" class="position-absolute top-30 start-50 translate-middle-x" style="width: 65%; margin: 0.5em 0 0 0">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label" style="margin: 0.5em 0.8em">Name</label>
            <input asp-for="@Model.Name" type="text" class="form-control bg-black text-light" placeholder="Employee name" style="border: 1px solid var(--bs-light-border-subtle); border-radius: 0.8em">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.DayRate" class="form-label" style="margin: 0.5em 0.8em">Day Rate</label>
            <input asp-for="@Model.DayRate" type="text" class="form-control bg-black text-light" inputmode="numeric" placeholder="Employee day rate" style="border: 1px solid var(--bs-light-border-subtle); border-radius: 0.8em">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.StartDate" class="form-label" style="margin: 0.5em 0.8em">Start Date</label>
            <input asp-for="@Model.StartDate" type="text" class="form-control bg-black text-light" inputmode="numeric" placeholder="Employee start date" style="border: 1px solid var(--bs-light-border-subtle); border-radius: 0.8em">
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success display-7">Update</button>
        </div>
    </form>
</body>